server:
  port: 8080
  servlet:
    session:
      cookie:
#        로컬 환경에서만 적용
        same-site: Lax
        secure: false
        http-only: true

logging:
  level:
    org.springframework.security: DEBUG
    org.springframework.security.oauth2.client: DEBUG

service-url:
  web: http://localhost:5173
  server: http://localhost:8080

spring:
  datasource:
    url: jdbc:postgresql://YOUR_DATABASE_URL
    username: YOUR_DATABASE_USERNAME
    password: YOUR_DATABASE_PASSWORD
    driver-class-name: org.postgresql.Driver
    hikari:
      maximum-pool-size: 5
      idle-timeout: 5000
      max-lifetime: 20000
      minimum-idle: 1
      connection-test-query: SELECT 1
      pool-name: HikariPool
      auto-commit: true
  jpa:
    database-platform: org.hibernate.dialect.PostgreSQLDialect
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        enum:
          storage: STRING
        jdbc:
          lob:
            non_contextual_creation: true
          batch_size: 20
        format_sql: true
        # PostgreSQL prepared statement 캐싱 관련 설정
        query:
          plan_cache_max_size: 2048
          plan_parameter_metadata_max_size: 128
  security:
    oauth2:
      client:
        registration:
          # 네이버 로그인
          naver:
            client-id: YOUR_NAVER_CLIENT_ID
            client-secret: YOUR_NAVER_CLIENT_SECRET
            redirect-uri: "{baseUrl}/login/oauth2/code/naver"
            authorization-grant-type: authorization_code
            scope:
              - name
              - email
            client-name: Naver
            client-authentication-method: client_secret_post

          # 카카오 로그인
          kakao:
            client-id: YOUR_KAKAO_CLIENT_ID
            client-secret: YOUR_KAKAO_CLIENT_SECRET
            redirect-uri: "{baseUrl}/login/oauth2/code/kakao"
            authorization-grant-type: authorization_code
            scope:
              - account_email
              - phone_number
              - name
            client-name: Kakao
            client-authentication-method: client_secret_post

          # 구글 로그인
          google:
            client-id: YOUR_GOOGLE_CLIENT_ID
            client-secret: YOUR_GOOGLE_CLIENT_SECRET
            redirect-uri: "{baseUrl}/login/oauth2/code/google"
            scope:
              - profile
              - email
              - phone
            client-name: Google

          # 애플 로그인 (Sign in with Apple)
          apple:
            client-id: YOUR_APPLE_SERVICE_ID
            client-secret: YOUR_APPLE_CLIENT_SECRET
            redirect-uri: "{baseUrl}/login/oauth2/code/apple"
            authorization-grant-type: authorization_code
            scope:
              - name
              - email
            client-name: Apple
            client-authentication-method: client_secret_post
        provider:
          naver:
            authorization-uri: https://nid.naver.com/oauth2.0/authorize
            token-uri: https://nid.naver.com/oauth2.0/token
            user-info-uri: https://openapi.naver.com/v1/nid/me
            user-name-attribute: response
          kakao:
            authorization-uri: https://kauth.kakao.com/oauth/authorize
            token-uri: https://kauth.kakao.com/oauth/token
            user-info-uri: https://kapi.kakao.com/v2/user/me
            user-name-attribute: id
          google:
            authorization-uri: https://accounts.google.com/o/oauth2/v2/auth
            token-uri: https://oauth2.googleapis.com/token
            user-info-uri: https://www.googleapis.com/oauth2/v3/userinfo
            user-name-attribute: sub
          apple:
            authorization-uri: https://appleid.apple.com/auth/authorize
            token-uri: https://appleid.apple.com/auth/token
            user-info-uri: https://appleid.apple.com/auth/userinfo
            jwk-set-uri: https://appleid.apple.com/auth/keys
            user-name-attribute: sub
  batch:
    jdbc:
      initialize-schema: never
    job:
      enabled: false

